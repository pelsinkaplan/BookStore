@model BookStore.Models.Category

@{
    ViewData["Title"] = "Kategori Sil";
}

<h1>Kategori Sil</h1>

<div>
    <h5>@Model.Name kategorisini silmek istediğinize emin misiniz?</h5>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-outline-dark" /> |
        <a asp-action="Index" class="btn btn-outline-dark">Kategorilere Geri Dön</a>
    </form>
</div>
