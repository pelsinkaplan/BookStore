@model BookStore.Models.Publisher

@{
    ViewData["Title"] = "Yayınevi Detaylar";
}

<div>
    <h4>@Model.Name</h4>
    <hr />
    <div class="row">
        <div>
            <img src="@Model.Image" class="card-img-top" alt="Yayınevi" height="100" width="100">
            <hr />
            <p>@Html.DisplayNameFor(model => model.Books)</p>

            @foreach (var book in ViewBag.PublishersBooks)
            {
                <li>@book.Name</li>
            }
        </div>
    </div>
</div>
<hr />
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-dark">Düzenle</a> |
    <a asp-action="Index" class="btn btn-outline-dark">Yayınevlerine Geri Dön</a>
</div>
